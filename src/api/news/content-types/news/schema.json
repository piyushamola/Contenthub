{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "news",
    "pluralName": "news-items",
    "displayName": "News",
    "description": "News articles and updates"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "string"
    },
    "canonicalUrl": {
      "type": "string"
    },
    "tags": {
      "type": "customField",
      "customField": "plugin::tagsinput.tags",
      "options": {
        "label": "Tags"
      }
    },
    "seoTags": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "breadCrumb": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "heroContent": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "contentAfterToc": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "titleDescription": {
      "type": "text"
    },
    "url": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "publishedDate": {
      "type": "datetime"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "author_tp": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author-tp.author-tp"
    },
    "vertical": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::vertical.vertical"
    },
    "sub_vertical": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::sub-vertical.sub-vertical"
    },
    "priority": {
      "type": "uid"
    },
    "isBreaking": {
      "type": "boolean",
      "default": false
    },
    "readingTime": {
      "type": "integer",
      "min": 1
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    },
    "collapsible": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::collapsible.collapsible"
    }
  }
}
